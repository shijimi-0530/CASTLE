<h1>新規城登録</h1>

<%= form_with model: @castle do |f| %>
<div class="card mb-3" style="max-width: 1580px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="..." alt="...">
    </div>
    
        <div class="card-body">
            
        <div class="col-md-8">
         <div class="form-group row">
            <%= f.label "城名", class: "col-sm-2 col-form-label"%><br/>
            <div class="col-sm-10">
              <%= f.text_field :name, class: 'form-control'%>
            </div>
         </div>
        </div>
        
        <div class="col-md-8">
         <div class="form-group row">
            <%= f.label "通称・別名", class: "col-sm-2 col-form-label"%><br/>
            <div class="col-sm-10">
              <%= f.text_field :content, class: 'form-control'%>
            </div>
         </div>
        </div>
        
        <div class="col-md-8">
         <div class="form-group row">
            <%= f.label "地方", class: "col-sm-2 col-form-label"%><br/>
            <div class="col-sm-10">
              <%= f.select :region_area, Castle.region_areas.keys, {} , class: 'form-control'%>
            </div>
         </div>
        </div>
        
        <div class="col-md-8">
         <div class="form-group row">
            <%= f.label "都道府県", class: "col-sm-2 col-form-label"%><br/>
            <div class="col-sm-10">
              <%= f.select :prefectures_area, Castle.prefectures_areas.keys, {} , class: 'form-control'%>
            </div>
         </div>
        </div>
        
        <div class="col-md-8">
         <div class="form-group row">
            <%= f.label "城主", class: "col-sm-2 col-form-label"%><br/>
            <div class="col-sm-10">
              <%= f.text_field :lord, class: 'form-control'%>
            </div>
         </div>
        </div>
        
        <div class="col-md-8">
         <div class="form-group row">
            <%= f.label "築城年", class: "col-sm-2 col-form-label"%><br/>
            <div class="col-sm-10">
              <%= f.text_field :construction_year, class: 'form-control'%>
            </div>
         </div>
        </div>
        
        <%= f.submit "Create" %>

      </div>
    </div>
  </div>
</div>

<% end %>
 
<%= link_to "Back", castles_path %>

