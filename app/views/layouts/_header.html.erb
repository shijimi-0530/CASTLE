<header
  <div class="d-flex flex-column bd-highlight mb-3">
  <div class="p-2 bd-highlight">
  <nav class="navbar navbar-expand-md navbar-light bg-white shadow-sm castle-header-container">
    <%= link_to root_path do %>
      <%= image_tag "/images/castle_logo.jpg" %>
    <% end %>
    <form class="form-inline">
      <div class="form-group">
        <input class="form-control castle-header-search-input">
      </div>
      <div class="input-group">
        <button type="submit" class="btn castle-header-search-button"><i class="fas fa-search castle-header-search-icon"></i></button>
      </div>
    </form>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <!-- Right Side Of Navbar -->
      <ul class="navbar-nav ml-auto mr-5 mt-2">
      <!-- user_signed_in? はユーザがログインしているか調べるdeviseのHelperメソッド -->
      <% if user_signed_in? %>
        <li class="nav-item mr-5">
          <%= link_to mypage_users_path, class: "nav-link" do %>
            <i class="fas fa-user mr-1"></i><label>マイページ</label>
          <% end %>
        </li>
        <li class="nav-item mr-5">
          <%= link_to root_path, class: "nav-link" do %>
            <label>ログアウト</label>
          <% end %>
        </li>
      <% else %>
        <li class="nav-item mr-5">
          <%= link_to new_user_registration_path, class: "nav-link" do %>
            <label>新規登録</label>
          <% end %>
        </li>
        <li class="nav-item mr-5">
          <%= link_to login_path, class: "nav-link" do %>
            <label>ログイン</label>
          <% end %>
        </li>
        <li class="nav-item mr-5">
          <%= link_to login_path, class: "nav-link" do %>
            <label>ログアウト</label>
          <% end %>
        </li>
        <hr>
        <li class="nav-item mr-5">
          <%= link_to login_path, class: "nav-link" do %><i class="far fa-heart"></i><% end %>
        </li>
        <li class="nav-item mr-5">
          <%= link_to login_path, class: "nav-link" do %><i class="fas fa-shopping-cart"></i><% end %>
        </li>
        <% end %>
     
    </div>
      </div
   <div class="d-flex justify-content-center">
     <div class="header_mypage_topimage">
        <img src="/assets/Matsumoto Castle_Pagetop.jpg" />
        <div class="header-cover__actions">
          <p class="btn-setting">
            <a class="c-btn c-btn--s" onclick="onclickcatalystbutton('mypage_edit_button')" href="/users/mypage/edit">マイページ設定</a>
          </p>
       </div>
      </div>
     </div>
  </nav>
</header>
